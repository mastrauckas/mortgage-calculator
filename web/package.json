{
  "name": "mortgage-calculator",
  "version": "1.0.0",
  "description": "Mortgage Calculator website",
  "scripts": {
    "restore": "cd ../api/src/Maa.MortgageCalculator.Endpoints && dotnet restore",
    "build": "yarn build:dev",
    "build:dev": "yarn build:dev:watch",
    "build:dev:watch": "yarn clean && cross-env NODE_ENV=development webpack --progress --profile --color --watch",
    "build:dev:nowatch": "yarn clean && cross-env NODE_ENV=development webpack --progress --profile --color",
    "build:prod": "yarn clean c && cross-env NODE_ENV=production webpack --progress --profile --color",
    "api-server": "cd ../api/src/Maa.MortgageCalculator.Endpoints && cross-env ASPNETCORE_ENVIRONMENT=Development dotnet run",
    "dev-server:quiet": "yarn lint && cross-env NODE_ENV=development webpack-dev-server --inline",
    "dev-server": "yarn lint && cross-env NODE_ENV=development webpack-dev-server --inline --progress",
    "all-servers": "concurrently --kill-others --names \"DEV-SERVER,API-SERVER\" -c \"bgBlue,bgGreen\" \"yarn dev-server:quiet\" \"yarn api-server\"",
    "test": "npm run test:cs:endpoints && npm run test:cs:models",
    "test:cs:endpoints": "cd ../api/tests/Maa.MortgageCalculator.Endpoints.Tests &&  dotnet test",
    "test:cs:models": "cd ../api/tests/Maa.MortgageCalculator.Models.Tests/ && dotnet test",
    "lint": "yarn lint:javascript",
    "lint:javascript": "eslint src",
    "clean": "rimraf ./build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mastrauckas/mortgage-calculator.git"
  },
  "author": "Michael Astrauckas",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mastrauckas/mortgage-calculator.git/issues"
  },
  "homepage": "https://github.com/mastrauckas/MortgageCalculator#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-eslint": "^8.0.1",
    "babel-loader": "^7.1.2",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-2": "^6.24.1",
    "concurrently": "^3.5.0",
    "cross-env": "^5.1.1",
    "css-loader": "^0.28.4",
    "eslint": "^4.10.0",
    "eslint-config-prettier": "^2.7.0",
    "eslint-loader": "^1.6.3",
    "eslint-plugin-prettier": "^2.3.1",
    "eslint-plugin-react": "^7.4.0",
    "exports-loader": "^0.6.4",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.5",
    "html-loader": "^0.5.0",
    "html-webpack-plugin": "^2.28.0",
    "prettier": "^1.7.4",
    "style-loader": "^0.19.0",
    "webpack": "^3.8.1",
    "webpack-dev-server": "^2.9.4"
  },
  "dependencies": {
    "axios": "^0.17.0",
    "core-js": "^2.5.0",
    "flux": "^3.1.2",
    "material-ui": "^0.19.4",
    "prop-types": "^15.6.0",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "react-flexbox-grid": "^2.0.0",
    "react-tap-event-plugin": "^3.0.2",
    "sugar": "^2.0.4"
  }
}
